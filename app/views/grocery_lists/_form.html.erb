<%= form_for @grocery_list do |f| %>

  <% if @grocery_list.errors.any? %>
    <div>
      <h2><%#= pluralize(@grocery_list.errors.count, 'error') %> <!-- prevented the list from being saved. --></h2>
      <ul>
        <%# @grocery_list.error.full_messages.each do |error_msg| %>
          <li><%#= error_msg %></li>
        <%# end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.submit %>
<% end %>
